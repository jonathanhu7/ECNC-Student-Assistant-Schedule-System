generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username String    @id @unique
  nickname String
  role     String
  Account  Account[]
}

model Account {
  username       String @id @unique
  hashedPassword String
  salt           String
  user           User   @relation(fields: [username], references: [username])
}
